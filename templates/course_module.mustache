{{#visible}}
<div class="content card mb-3">
    <div class="row no-gutters">
        <div class="col-2">
            <a href="{{url}}"><img class="cop-forum img-fluid" src="{{imgsrc}}"></a>
        </div>
        <div class="col-10">
            <div class="card-body d-flex flex-column">
                {{#restrictions}}
                <a tabindex="0"
                   class="btn p-0 mr-2 mt-1 restrict-access-lock position-absolute"
                   role="button" data-toggle="popover" data-trigger="focus" data-html="true" data-container="body"
                   data-content="{{restrictions.formattedinfo}}"
                    style="top: 0; right: 0"
                >
                    <i class="far fa-lock gray600" title="Click lock icon to view availability restrictions"></i>
                </a>
                {{/restrictions}}
                <h4 class="card-title"><a href="{{url}}">{{name}}</a><span class="small">{{{afterlink}}}</span></h4>
                <div class="card-text">{{{content}}}</div>
                {{#featuredtitle}}
                <div>
                    <span class="d-block">Featured post: <a href="{{featuredurl}}"><strong>{{featuredtitle}}</strong></a></span>
                </div>
                {{/featuredtitle}}
            </div>
        </div>
    </div>
</div>
{{/visible}}